<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_enregister" tools:context="miage.mbds.cours_mbds.RegisterActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingRight="@dimen/activity_horizontal_margin_0dp"
        android:id="@+id/scrollView">

            <LinearLayout
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="false"
                android:id="@+id/linearLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Veuillez saisir vos informations"
                    android:id="@+id/textView"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18dp"
                    android:textIsSelectable="false"
                    android:textColor="#2d68fe"
                    android:layout_marginTop="20dp" />

                <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:drawableLeft="@drawable/ic_account_circle_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="12"
                        android:id="@+id/editTextNom"
                        android:layout_gravity="center_horizontal"
                        android:hint="Votre nom"
                        android:layout_marginTop="15dp"
                        android:editable="true"
                        android:drawablePadding="@dimen/drawable_padding" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                    android:drawableLeft="@drawable/ic_account_circle_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextPrenom"
                    android:hint="Votre prénom"
                    android:layout_marginTop="15dp"
                    android:editable="true"
                    android:drawablePadding="@dimen/drawable_padding" />
                </android.support.design.widget.TextInputLayout>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerCountry" />

                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:id="@+id/radioGroupSexe">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Masculin"
                        android:id="@+id/radioButtonMasculin"
                        android:checked="true"
                        android:textColor="#2d68fe" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Féminin"
                        android:id="@+id/radioButtonFeminin"
                        android:layout_gravity="center_horizontal"
                        android:checked="false"
                        android:textColor="#2d68fe" />

                </RadioGroup>

                <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:drawableLeft="@drawable/ic_local_phone_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:ems="10"
                        android:id="@+id/editTextTelephonePortable"
                        android:hint="Télephone portable"
                        android:layout_marginTop="15dp"
                        android:editable="true"
                        android:drawablePadding="@dimen/drawable_padding" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:drawableLeft="@drawable/ic_mail_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:id="@+id/editTextEmail"
                        android:layout_gravity="center_horizontal"
                        android:hint="E mail"
                        android:layout_marginTop="15dp"
                        android:editable="true"
                        android:drawablePadding="@dimen/drawable_padding" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:drawableLeft="@drawable/ic_https_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/editTextMotDePasse"
                        android:hint="Mot de passe"
                        android:layout_marginTop="15dp"
                        android:editable="true"
                        android:drawablePadding="@dimen/drawable_padding" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:drawableLeft="@drawable/ic_https_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/editTextMotDePasseConfirme"
                        android:hint="Confirmation mot de passe"
                        android:layout_marginTop="15dp"
                        android:editable="true"
                        android:drawablePadding="@dimen/drawable_padding" />
                </android.support.design.widget.TextInputLayout>


                <Button
                    android:background="@drawable/button_radius"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="S&apos;enregistrer"
                    android:id="@+id/buttonSenregistrer"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="false"
                    android:layout_below="@+id/linearLayout"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:textColor="#ffffff"
                    android:onClick="onClick" />

            </LinearLayout>

    </ScrollView>

</RelativeLayout>
